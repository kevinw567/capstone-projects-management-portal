            {{!-- add course --}}
            <form action="/courses/addproject" method="POST" class="add-project">
                <h2 class="add-proj-h2">Add a Project</h2>
                <div class="proj-info">
                    <div class= "form-one-line-input">
                        <label for="">Project Name</label>
                        <input type="text" class="proj-input" name="projectName">
                    </div>
                    <div class="form-multi-line-input">
                        <label for="">Description</label>
                        <textarea placeholder="Enter here the description of the project..." class="proj-input" name="projectDescription"></textarea>
                    </div>
                    <div class="form-one-line-input">
                        <label for="">Client Name</label>
                        <input type="text" class="proj-input" name="clientName">
                    </div>
                    <div class="form-one-line-input">
                        <label for="">Client Email</label>
                        <input type="text" class="proj-input" name="clientEmail"> 
                    </div>
                    <div class="form-multi-line-input">
                        <label for="">Extra Details</label>
                        <textarea class="proj-input" name="extraDetails"></textarea>
                    </div>
                </div>
                <input type="submit" value="Add Project" class="add-proj-btn"></input>
            </form>
        </div>
        </div>
